
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra para Relatórios de Ocorrência
    match /occurrence_reports/{reportId} {
      // Qualquer usuário autenticado pode ler todos os relatórios.
      allow read: if request.auth != null;
      
      // Um usuário autenticado pode criar um relatório, mas não pode
      // atualizar ou deletar depois de criado.
      allow create: if request.auth != null;
      allow update, delete: if false; 
    }

    // Regra para Relatórios de Serviço
    match /service_reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Regra para Talões (Summons)
    match /summons/{summonsId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}

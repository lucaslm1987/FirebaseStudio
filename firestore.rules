
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to all collections for this MVP.
    // In a production app, you would want to secure this based on user roles and ownership.
    match /occurrence_reports/{reportId} {
      allow read, write: if true;
    }

    match /service_reports/{reportId} {
      allow read, write: if true;
    }

    match /summons/{summonsId} {
      allow read, write: if true;
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário é o proprietário do documento (para uso futuro, se necessário)
    function isOwner(docId, collectionName) {
      return request.auth.uid == get(/databases/$(database)/documents/$(collectionName)/$(docId)).data.userId;
    }
    
    // Regra para Relatórios de Ocorrência
    match /occurrence_reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; 
    }

    // Regra para Relatórios de Serviço
    match /service_reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Regra para Talões (Summons)
    match /summons/{summonsId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}

{
  "entities": {
    "OccurrenceReport": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OccurrenceReport",
      "type": "object",
      "description": "Represents an occurrence report created by GCMobile users.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Occurrence Report."
        },
        "date": {
          "type": "string",
          "description": "Date of the occurrence.",
          "format": "date-time"
        },
        "location": {
          "type": "string",
          "description": "Location where the occurrence took place."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the occurrence."
        },
        "involvedParties": {
          "type": "string",
          "description": "Involved parties in the occurrence."
        }
      },
      "required": [
        "id",
        "date",
        "location",
        "description"
      ]
    },
    "DailyServiceReport": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DailyServiceReport",
      "type": "object",
      "description": "Represents a daily service report created by GCMobile users.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Daily Service Report."
        },
        "date": {
          "type": "string",
          "description": "Date of the service.",
          "format": "date-time"
        },
        "shift": {
          "type": "string",
          "description": "Shift during which the service was performed."
        },
        "activities": {
          "type": "string",
          "description": "Description of activities performed during the service."
        }
      },
      "required": [
        "id",
        "date",
        "shift",
        "activities"
      ]
    },
    "Summons": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Summons",
      "type": "object",
      "description": "Represents a summons issued by GCMobile users.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Summons."
        },
        "date": {
          "type": "string",
          "description": "Date the summons was issued.",
          "format": "date-time"
        },
        "violatorName": {
          "type": "string",
          "description": "Name of the person receiving the summons."
        },
        "violationDescription": {
          "type": "string",
          "description": "Description of the violation."
        }
      },
      "required": [
        "id",
        "date",
        "violatorName",
        "violationDescription"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/occurrence_reports/{occurrenceReportId}": {
      "schema": {
        "$ref": "#/entities/OccurrenceReport"
      },
      "description": "Collection of all occurrence reports."
    },
    "/service_reports/{serviceReportId}": {
      "schema": {
        "$ref": "#/entities/DailyServiceReport"
      },
      "description": "Collection of all daily service reports."
    },
    "/summons/{summonsId}": {
      "schema": {
        "$ref": "#/entities/Summons"
      },
      "description": "Collection of all summons."
    }
  }
}
